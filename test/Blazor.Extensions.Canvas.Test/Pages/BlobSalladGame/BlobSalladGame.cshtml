@page "/blob"
@implements IDisposable

<BECanvas ref="canvas" Width="@width" Height="@heigth"></BECanvas>

@functions {
    private long width = 800;
    private long heigth = 600;
    private Canvas2dContext context;
    private BECanvasComponent canvas;
    private Scene scene;

    protected override void OnAfterRender()
    {
        context = canvas.CreateCanvas2d();
        scene = new Scene(context, width, heigth, 1);
        scene.Start();
    }

    public void Dispose()
    {
        scene?.Stop();
    }
}